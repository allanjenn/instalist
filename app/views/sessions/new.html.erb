<div class="appform">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h2>Login</h2>

				<%= form_tag('/login', method: 'post') do %>
				<div class="form-group">
					<%= label_tag :email %>
					<%= text_field_tag :email  %>
				</div>

				<div class="form-group">
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</div>

				<%= submit_tag "Submit",  class: 'btn'%>
				<% end %>
				
			</div>
		</div>
	</div>
</div>

